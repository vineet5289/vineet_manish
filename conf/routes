# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /        	                        	   controllers.SRPController.index()
GET     /login                       			   controllers.SRPController.preLogin()
POST    /login                       			   controllers.SRPController.postLogin()
GET     /logout                       			   controllers.SRPController.logout()

# mailer
#GET       /sendmail                           	   controllers.Application.sendMailTest()

# Message Api
GET			/sendMessage							   controllers.MessageController.sendMessage() 

# add new schoole request
GET      	/addnewschoolrequest                	   controllers.RegistrationRequest.preAddNewSchoolRequest()
POST     	/addnewschoolrequest                       controllers.RegistrationRequest.postAddNewSchoolRequest()

# schoole registration request
POST      	/submitopt                            	   controllers.RegistrationRequest.submitOTP()
POST     	/registerschool            	           	   controllers.RegistrationRequest.postSchoolRegistrationRequest()

# employee registration request
GET      	/registersemp                              controllers.RegistrationRequest.preEmployeeRegistrationRequest()
POST     	/registeremp            	               controllers.RegistrationRequest.postEmployeeRegistrationRequest()

# students registration request
GET      	/registersstudent                 		   controllers.RegistrationRequest.preStudentRegistrationRequest()
POST     	/registerempstudent            	       	   controllers.RegistrationRequest.postStudentRegistrationRequest()

# Map static resources from the /public folder to the /assets URL path
#GET     	/assets/*file                              controllers.Assets.versioned(path="/public", file: Asset)
GET     	/assets/*file		                  	   controllers.Assets.at(path="/public", file: String)

# approved school

GET			/approvedschool							   controllers.RegistrationRequest.preApprovedNewSchoolRequest()
POST		/approvedschool							   controllers.RegistrationRequest.postApproveNewSchooldRequest()

# students and guardian registration

GET			/addnewstudents							   controllers.students_guardians.StudenstGuardian.preAddFressStudents()
POST		/addnewstudents							   controllers.students_guardians.StudenstGuardian.postAddFressStudents()

# class

GET			/addClass							   controllers.school.ClassController.preAddClass()
POST		/addClass							   controllers.school.ClassController.postAddClass()
GET			/editClass							   controllers.school.ClassController.editClass()
POST		/deleteClass						   controllers.school.ClassController.deleteClass()
GET			/viewClass							   controllers.school.ClassController.viewAllClass()


# subject

GET			/addSubjects							   controllers.school.SubjectController.preAddSubjects()
POST		/addSubjects							   controllers.school.SubjectController.postAddSubjects()
GET			/viewSubjects							   controllers.school.SubjectController.viewsSubjects()
POST		/editSubjects							   controllers.school.SubjectController.postAddSubjects()

#test
GET			/addTest							   controllers.CustomController.testRoute()
POST		/addTest							   controllers.CustomController.postRoute()

