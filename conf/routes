# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /        	                        	   controllers.SRPController.index()

# login handler
GET     /login                       			   controllers.login_logout.LoginController.preLogin()
POST    /login                       			   controllers.login_logout.LoginController.postLogin(phone: String ?="")
GET     /logout                       			   controllers.login_logout.LoginController.logout()

# mailer
GET       /sendmail                           	   controllers.MailController.sendMailTest()

# Message Api
GET			/sendMessage							   controllers.message.MobileMessageController.sendMessage()

# Notification Listening Controller
GET     	/listen                           		   controllers.message.NotificationListeningController.listen()
GET     	/listeningWS                     		   controllers.message.NotificationListeningController.listeningSocket()

# Notification Controller
POST     	/notification                              controllers.message.NotificationController.notification()

# add new schoole request
GET      	/addnewschoolrequest                	   controllers.SchoolController.preAddNewSchoolRequest()
POST     	/addnewschoolrequest                       controllers.SchoolController.postAddNewSchoolRequest()

# schoole registration request
POST      	/submitopt                            	   controllers.SchoolController.submitOTP()
POST     	/registerschool            	           	   controllers.SchoolController.postSchoolRegistrationRequest()

# employee registration request
GET      	/registeremp                              controllers.EmployeeController.preEmployeeRegistrationRequest()
POST     	/registeremp            	               controllers.EmployeeController.postEmployeeRegistrationRequest()

# students registration request
GET      	/registerstudent                 		   controllers.StudentController.preStudentRegistrationRequest()
POST     	/registerstudent            	       	   controllers.StudentController.postStudentRegistrationRequest()

# Map static resources from the /public folder to the /assets URL path
GET     	/assets/*file                              controllers.Assets.versioned(path="/public", file: Asset)
GET     	/assets/*file		                  	   controllers.Assets.at(path="/public", file: String)


# approved school

#GET			/approvedschool							   controllers.SchoolController.preApprovedNewSchoolRequest()
#POST		/approvedschool							   controllers.SchoolController.postApproveNewSchooldRequest()

# students and guardian registration

GET			/addnewstudents							   controllers.students_guardians.StudenstGuardian.preAddFressStudents()
POST		/addnewstudents							   controllers.students_guardians.StudenstGuardian.postAddFressStudents()

# class

GET			/addClass							   		controllers.school.ClassController.preAddClass()
POST		/addClass							   		controllers.school.ClassController.postAddClass()
POST		/editClass/:className				   		controllers.school.ClassController.editClass(className: String)
POST		/deleteClass/:className				   		controllers.school.ClassController.deleteClass(className: String)
GET			/viewClass							   		controllers.school.ClassController.viewAllClass()
POST		/addSection/:className						controllers.school.ClassController.addSection(className: String)


# subject

GET			/addSubjects							   controllers.school.SubjectController.preAddSubjects()
POST		/addSubjects							   controllers.school.SubjectController.postAddSubjects()
GET			/viewSubjects							   controllers.school.SubjectController.viewsSubjects()
POST		/editSubjects/:subjectId				   controllers.school.SubjectController.editSubject(subjectId: Long)
POST		/editSubjects/:subjectId				   controllers.school.SubjectController.deleteSubjects(subjectId: Long)

#test
GET			/addTest							   		controllers.CustomController.testRoute()
POST		/addTest							   		controllers.CustomController.postRoute()


# access rights
POST		/updateAccessRights						   controllers.AccessRightsController.addAccessRight()

# view all user
GET			/allUser/:schoolId							controllers.user.UserController.getUsers(schoolId: Long, category: String ?="")

# view all user
GET			/userInfo/:schoolId/:userName				controllers.user.UserController.getUser(schoolId: Long, userName:String, category: String ?="")

# initial registration
GET			/registration								controllers.SRPController.preRegistration(reg_user_request : String ?="ERROR")
